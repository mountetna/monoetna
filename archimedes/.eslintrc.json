{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "Routes": false,
    "TIMUR_CONFIG": false
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-undef": "error",
    "quotes": ["error", "single", {"avoidEscape": true}],
    "semi": "warn",
    "no-var": "warn",
    "curly": [ "warn", "multi-line" ],
    "brace-style": ["warn", "stroustrup", {"allowSingleLine": true}]
  }
}
