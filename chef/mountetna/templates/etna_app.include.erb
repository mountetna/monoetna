<VirtualHost *:443>
  ProxyPass / http://<%= @app_name %>_app_fe/ disablereuse=on
  ProxyPassReverse / http://<%= @app_name %>_app_fe/

  SSLEngine on
  ServerName <%= @app_name %>.ucsf.edu

  SSLCertificateFile /etc/ssl/<%= @host_prefix %>/<%= @host_prefix %>_ucsf_edu_cert.cer
  SSLCertificateKeyFile /etc/ssl/<%= @host_prefix %>/<%= @host_prefix %>.key
  SSLCertificateChainFile /etc/ssl/<%= @host_prefix %>/<%= @host_prefix %>_ucsf_edu_interm.cer

<% unless @other_include.nil? %>
  Include <%= @other_include %>
<% end %>
</VirtualHost>
