{
  // Make sure to remove all comments before using -- JSON doesn't allow comments!
  "project_name": "your_project1", // Every project needs this value -- it should be unique, like mvir1.
  "project_name_full": "This is a JSON template for creating a project.", // Provide a better name for display purposes.
  "models": {
    // Define your initial models in this block.
    "assay_model": {
      // Each model should have a parent_model_name and parent_link_type.
      "parent_model_name": "timepoint", // Make sure parent models are also defined in this file!
      "parent_link_type": "collection", // Options are child, collection, and table.
      "identifier": "tube_name",
      "attributes": {
        // A set of attributes for the model.
        "tube_name": {
          "attribute_name": "tube_name", // You only need to include the "identifier" attribute again if you want to modify it, i.e. set a validation, set a description, etc.
          "validation": {
            "type": "Regexp", // Can be Array, Range, or Regexp.
            "value": "^[a-zA-Z]$"
          }
        },
        "restricted": {
          "attribute_name": "restricted", // This will be the name of the attribute. It must be unique for the model and match the hash key one level above!
          "desc": "Controls access to the data.", // Every non-identifier attribute must include at least attribute_name, desc, display_name, and attribute_type.
          "display_name": "Restricted",
          "attribute_type": "boolean"
        },
        "assay_pool_model": {
          // Make sure this model already exists in the project!
          "attribute_name": "assay_pool_model",
          "link_model_name": "assay_pool_model", // Link attributes also require this link_model_name value that matches the attribute name.
          "desc": "Assay pool model",
          "display_name": "Assay Pool model",
          "attribute_type": "link" // A non-parent linkage to another model.
        },
        "vendor": {
          "attribute_name": "vendor",
          "display_name": "Vendor",
          "desc": "Vendor of the equipment",
          "validation": {
            "type": "Array",
            "value": ["Acme"]
          },
          "attribute_type": "string" // Acceptable attribute_types are ["boolean", "date_time", "file", "float", "image", "integer", "link", "match", "matrix", "string", "table"]
        }
      }
    },
    "document": {
      "parent_model_name": "project",
      "parent_link_type": "collection",
      "identifier": "name",
      "attributes": {
        "document_desc": {
          "attribute_name": "document_desc",
          "desc": "Description",
          "display_name": "Document desc",
          "attribute_type": "string"
        },
        "version": {
          "attribute_name": "version",
          "desc": "Version",
          "display_name": "Version",
          "attribute_type": "float",
          "hidden": true
        },
        "file": {
          "attribute_name": "file",
          "desc": "File",
          "display_name": "File",
          "attribute_type": "file",
          "read_only": true
        },
        "version_date": {
          "attribute_name": "version_date",
          "desc": "Version date",
          "display_name": "Version date",
          "attribute_type": "date_time"
        }
      }
    },
    "assay_pool_model": {
      "parent_model_name": "project",
      "parent_link_type": "collection",
      "identifier": "assay_pool_name",
      "attributes": {
        "biospecimen ": {
          // Make sure you don't have extraneous spaces like the above -- this is BAD and will fail validation.
          "attribute_name": "biospecimen",
          "desc": "Type of biospecimen collected",
          "display_name": "Biospecimen",
          "attribute_type": "string"
        },
        "cells_loaded": {
          "attribute_name": "cells_loaded",
          "desc": "Number of cells loaded into the whatchamacallit.",
          "display_name": "Cells Loaded",
          "attribute_type": "integer"
        }
      }
    },
    "patient": {
      "parent_model_name": "project",
      "parent_link_type": "collection",
      "identifier": "name",
      "attributes": {
        "status": {
          "attribute_name": "status",
          "desc": "Status at admission",
          "display_name": "Status",
          "attribute_type": "table"
        },
        "symptom": {
          "attribute_name": "symptom",
          "desc": "Related symptoms",
          "display_name": "Symptom",
          "attribute_type": "table"
        }
      }
    },
    "project": {
      // Project is the root model, and you must include this. No additional attributes are required. Note: this is the only model that does not need "parent_model_name" and "parent_link_type" defined.
      "identifier": "name",
      "attributes": {}
    },
    "status": {
      "parent_model_name": "patient",
      "parent_link_type": "table"
    },
    "symptom": {
      "parent_model_name": "patient",
      "parent_link_type": "table"
    },
    "timepoint": {
      "parent_model_name": "patient",
      "parent_link_type": "collection",
      "identifier": "name",
      "attributes": {
        "day": {
          "attribute_name": "day",
          "display_name": "Day",
          "desc": "Study day",
          "attribute_type": "integer",
          "restricted": true
        }
      }
    }
  }
}
